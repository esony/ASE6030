<Window x:Class="ASE6030.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Button Content="Start sequence" Height="23" HorizontalAlignment="Left" Margin="604,37,0,0" x:Name="StartButton" VerticalAlignment="Top" Width="136" Click="Impregnation_Click" Cursor="Hand" Background="#FF01B526"  FontWeight="Bold" OpacityMask="#FFBE5858" IsEnabled="False" >
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowFrameColorKey}}"/>
            </Button.BorderBrush>
        </Button>
        <Button Content="Abort" Height="23" HorizontalAlignment="Left" Margin="604,67,0,0" x:Name="AbortButton" VerticalAlignment="Top" Width="136" Click="AbortImpregnation_Click" Background="Red" FontWeight="Bold" Cursor="Hand" >
            <Button.BorderBrush>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.WindowFrameColorKey}}"/>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="ConnectButton" Content="Connect" HorizontalAlignment="Left" Margin="25,91,0,0" VerticalAlignment="Top" Width="74" Click="ConnectButton_Click">
            <Button.Foreground>
                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}"/>
            </Button.Foreground>
            <Button.Background>
                <SolidColorBrush Color="#FF0078D7"/>
            </Button.Background>
        </Button>
        <RadioButton x:Name="DeviceRadioButton" Content="Physical device" HorizontalAlignment="Left" Margin="20,67,0,0" VerticalAlignment="Top" GroupName="URLSelector" Checked="DeviceRadioButton_Checked"/>
        <RadioButton x:Name="SimulatorRadioButton" Content="Simulator" HorizontalAlignment="Left" Margin="20,47,0,0" VerticalAlignment="Top" IsChecked="True" GroupName="URLSelector" Checked="SimulatorRadioButton_Checked"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,20,0,0" TextWrapping="Wrap" Text="Select device" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="CookingTimeInput" HorizontalAlignment="Left" Height="18" Margin="160,181,0,0" TextWrapping="Wrap" Text="60" VerticalAlignment="Top" Width="40" TextChanged="CookingTimeInput_TextChanged"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,181,0,0" TextWrapping="Wrap" Text="Cooking time (s)" VerticalAlignment="Top" Height="18" Width="140"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,204,0,0" TextWrapping="Wrap" Text="Cooking pressure (bar)" VerticalAlignment="Top" Height="18" Width="140"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,227,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="140"><Run Text="Cooking"/><Run Text=" temperature (C)"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="20,158,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="140"><Run Text="Impregnation"/><Run Text=" time (s)"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="20,130,0,0" TextWrapping="Wrap" Text="Sequence parameters" VerticalAlignment="Top" Height="23" Width="156" FontWeight="Bold" FontSize="14"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="140" Text="Gain"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,260,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="183" FontWeight="Bold" Text="V104 PI-control Parameters"/>
        <TextBlock HorizontalAlignment="Left" Margin="20,311,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="18" Width="140"><Run Text="Integration time"/><Run Text=" (s)"/></TextBlock>
        <TextBox x:Name="ImpregnationInput" HorizontalAlignment="Left" Height="18" Margin="160,158,0,0" TextWrapping="Wrap" Text="20" VerticalAlignment="Top" Width="40" TextChanged="ImpregnationInput_TextChanged"/>
        <TextBox x:Name="CookingPressureInput" HorizontalAlignment="Left" Height="18" Margin="160,204,0,0" TextWrapping="Wrap" Text="30" VerticalAlignment="Top" Width="40" TextChanged="CookingPressureInput_TextChanged"/>
        <TextBox x:Name="CookingTemperatureInput" HorizontalAlignment="Left" Height="18" Margin="160,227,0,0" TextWrapping="Wrap" Text="23" VerticalAlignment="Top" Width="40" TextChanged="CookingTemperatureInput_TextChanged"/>
        <TextBox x:Name="GainInput" HorizontalAlignment="Left" Height="18" Margin="160,288,0,0" TextWrapping="Wrap" Text="0,2" VerticalAlignment="Top" Width="40" TextChanged="GainInput_TextChanged"/>
        <TextBox x:Name="IntegrationTimeInput" HorizontalAlignment="Left" Height="18" Margin="160,311,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="40" TextChanged="IntegrationTimeInput_TextChanged"/>
